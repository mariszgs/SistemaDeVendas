                    <td><?= $this->escapeHtml($client['email']) ?></td>
                    <td><?= $this->escapeHtml($client['cnpj']) ?></td>
                    <td><?= $this->escapeHtml($client['telefone']) ?></td>
                    <td><?= $this->escapeHtml($client['endereco']) ?></td>
