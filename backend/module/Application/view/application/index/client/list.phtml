<h1>Clientes</h1>

<a href="<?= $this->url('client', ['action' => 'create']) ?>" class="btn btn-primary">Novo Cliente</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
